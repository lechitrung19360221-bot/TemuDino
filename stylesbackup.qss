/* Global */
QWidget {
  background-color: #151515;
  color: #e6e6e6;
  font-size: 14px;
}

/* Remove dark boxes under text labels/checkboxes/radio */
QLabel, QCheckBox, QRadioButton {
  background: transparent;
  border: none;
  padding: 0;
}

/* Headings / Group boxes */
QGroupBox {
  background: #141617; /* base card */
  border: none; /* remove stroke per tab */
  border-radius: 16px;
  margin: 12px 10px;
  padding-top: 48px; /* keep block compact */
}
QGroupBox::title {
  subcontrol-origin: margin;
  subcontrol-position: top left;
  left: 16px;
  top: 20px; /* center within compact header */
  padding: 0 8px;
  color: #e6e6e6;
  background: transparent; /* no pill shape */
  border: none;
  font-size: 56px; /* bigger text without enlarging block */
  font-weight: 900; /* Qt max weight */
  font-family: "Segoe UI Black", "Arial Black", "Helvetica Neue", "Roboto Black", "Roboto", Arial;
}

/* Google brand overlay gradients per section (top tint -> transparent) */
QGroupBox#file_group {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 rgba(66,133,244,60), stop:0.35 rgba(66,133,244,25), stop:1 #141617);
}
QGroupBox#file_group::title { color: #4285F4; }
/* Center the File Selection title vertically in header band and enlarge */
QGroupBox#file_group::title {
  top: 20px;
  font-size: 60px;
  font-weight: 900;
}

QGroupBox#transform_group {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 rgba(52,168,83,60), stop:0.35 rgba(52,168,83,25), stop:1 #141617);
}
QGroupBox#transform_group::title { color: #34A853; top: 20px; font-size: 60px; font-weight: 900; }

/* Transform block tweaks: remove dark label boxes, center numbers, tint fields red */
QGroupBox#transform_group QLabel {
  background: transparent;
  border: none;
}
QGroupBox#transform_group QLineEdit,
QGroupBox#transform_group QSpinBox,
QGroupBox#transform_group QDoubleSpinBox,
QGroupBox#transform_group QComboBox {
  background: transparent;
  color: #eaeaea;
  border: 1px solid rgba(52,168,83,0.5); /* green stroke */
  min-width: 220px; /* dài hơn */
  min-height: 28px; /* chỉ nhỉnh hơn font một chút */
  padding: 2px 8px;
  border-radius: 10px; /* bo tròn hơn */
}
QGroupBox#transform_group QLineEdit { qproperty-alignment: AlignCenter; }
QGroupBox#transform_group QSpinBox { qproperty-alignment: AlignCenter; }
QGroupBox#transform_group QDoubleSpinBox { qproperty-alignment: AlignCenter; }
QGroupBox#transform_group QComboBox { /* keep text left; comment if want center */ }
QGroupBox#transform_group QLineEdit:hover,
QGroupBox#transform_group QSpinBox:hover,
QGroupBox#transform_group QDoubleSpinBox:hover,
QGroupBox#transform_group QComboBox:hover {
  border-color: rgba(52,168,83,0.7);
}

/* Smooth step buttons for spinboxes */
QGroupBox#transform_group QSpinBox::up-button,
QGroupBox#transform_group QDoubleSpinBox::up-button {
  subcontrol-origin: border;
  subcontrol-position: top right;
  width: 16px;
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #49c97a, stop:1 #2f9e57);
  border-left: 1px solid rgba(52,168,83,0.5);
  border-top-right-radius: 10px;
}
QGroupBox#transform_group QSpinBox::down-button,
QGroupBox#transform_group QDoubleSpinBox::down-button {
  subcontrol-origin: border;
  subcontrol-position: bottom right;
  width: 16px;
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #49c97a, stop:1 #2f9e57);
  border-left: 1px solid rgba(52,168,83,0.5);
  border-bottom-right-radius: 10px;
}
QGroupBox#transform_group QSpinBox::up-button:hover,
QGroupBox#transform_group QDoubleSpinBox::up-button:hover,
QGroupBox#transform_group QSpinBox::down-button:hover,
QGroupBox#transform_group QDoubleSpinBox::down-button:hover {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #5ad58a, stop:1 #38b165);
}

/* ComboBox drop-down button (remove hard border, keep compact) */
QGroupBox#transform_group QComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: top right;
  width: 16px;
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 #49c97a, stop:1 #2f9e57);
  border-left: 1px solid rgba(52,168,83,0.5);
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}
QGroupBox#transform_group QComboBox::drop-down:hover {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 #5ad58a, stop:1 #38b165);
}
QGroupBox#transform_group QComboBox::down-arrow {
  width: 8px; height: 6px;
}

/* Transform block: droplist follows green block color */
QGroupBox#transform_group QComboBox QAbstractItemView {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
    stop:0 #49c97a, stop:1 #2f9e57);
  color: #ffffff;
  border: 1px solid rgba(52,168,83,0.6);
  outline: 0;
}
QGroupBox#transform_group QComboBox QAbstractItemView::item {
  padding: 6px 10px;
}
QGroupBox#transform_group QComboBox QAbstractItemView::item:selected {
  background: rgba(52,168,83,0.85);
  color: #ffffff;
}

/* Per-block field tints: keep size, only change colors */
QGroupBox#file_group QLineEdit,
QGroupBox#file_group QSpinBox,
QGroupBox#file_group QDoubleSpinBox,
QGroupBox#file_group QComboBox {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #4b8bf7, stop:1 #2b6adf);
  border: 1px solid rgba(66,133,244,0.45);
  color: #ffffff;
}

QGroupBox#preview_group QLineEdit,
QGroupBox#preview_group QSpinBox,
QGroupBox#preview_group QDoubleSpinBox,
QGroupBox#preview_group QComboBox,
QGroupBox#preview_view_group QLineEdit,
QGroupBox#preview_view_group QSpinBox,
QGroupBox#preview_view_group QDoubleSpinBox,
QGroupBox#preview_view_group QComboBox {
