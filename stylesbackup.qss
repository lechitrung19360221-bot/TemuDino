/* Google brand colors per section */
QGroupBox#file_group { border-color: #4285F4; }
QGroupBox#file_group::title { color: #4285F4; }

QGroupBox#transform_group { border-color: #34A853; }
QGroupBox#transform_group::title { color: #34A853; }

QGroupBox#preview_group, QGroupBox#preview_view_group { border-color: #4285F4; }
QGroupBox#preview_group::title, QGroupBox#preview_view_group::title { color: #4285F4; }

QGroupBox#layer_group { border-color: #34A853; }
QGroupBox#layer_group::title { color: #34A853; }

QGroupBox#export_group { border-color: #4285F4; }
QGroupBox#export_group::title { color: #4285F4; }

/* Labels */
QLabel[objectName="active_label"] {
  color: #4fc3f7;
  font-weight: 600;
  font-size: 15px;
}

/* Active status inside Layer Control uses block color */
QGroupBox#layer_group QLabel#active_label {
  color: #34A853;
  font-weight: 700;
}

/* Inputs */
QLineEdit, QComboBox, QSpinBox, QDoubleSpinBox {
  background: #1e1e1e;
  color: #e6e6e6;
  border: 1px solid #3a3a3a;
  border-radius: 8px;
  padding: 6px 10px;
}
QLineEdit:focus, QComboBox:focus, QSpinBox:focus, QDoubleSpinBox:focus {
  border-color: #2ecc71;
}
QLineEdit:disabled, QComboBox:disabled, QSpinBox:disabled, QDoubleSpinBox:disabled {
  color: #9a9a9a;
  background: #202020;
  border-color: #2b2b2b;
}
QComboBox QAbstractItemView {
  background: #1e1e1e;
  border: 1px solid #3a3a3a;
  selection-background-color: #2ecc71;
  selection-color: #0b0b0b;
}
QComboBox, QComboBox QAbstractItemView {
  border-radius: 8px;
}

/* Buttons */
QPushButton {
  background: #2a2a2a;
  color: #e6e6e6;
  border: 1px solid #3f3f3f;
  border-radius: 12px;
  padding: 8px 12px;
}
QPushButton:hover {
  background: #343434;
}
QPushButton:pressed {
  background: #1f1f1f;
}
QPushButton:disabled {
  color: #8d8d8d;
  background: #232323;
  border-color: #2e2e2e;
}

/* Keep original shape; only change fill color for the three pick buttons */
