QGroupBox#layer_group QLineEdit,
QGroupBox#layer_group QSpinBox,
QGroupBox#layer_group QDoubleSpinBox,
QGroupBox#layer_group QComboBox {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #49c97a, stop:1 #2f9e57);
  border: 1px solid rgba(52,168,83,0.45);
  color: #ffffff;
}

QGroupBox#export_group QLineEdit,
QGroupBox#export_group QSpinBox,
QGroupBox#export_group QDoubleSpinBox,
QGroupBox#export_group QComboBox {
  background: transparent; /* remove blue fill */
  border: 1px solid rgba(66,133,244,0.5); /* blue stroke */
