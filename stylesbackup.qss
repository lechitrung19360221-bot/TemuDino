/* Checkboxes */
QCheckBox {
  spacing: 6px;
}
QCheckBox::indicator {
  width: 16px;
  height: 16px;
  border-radius: 4px;
}
QCheckBox::indicator:unchecked {
  border: 1px solid #3a3a3a;
  background: #1e1e1e;
}
QCheckBox::indicator:checked {
  border: 1px solid #2ecc71;
  background: #2ecc71;
}

/* Progress bar */
QProgressBar {
  border: 0;
  background-color: #2b2b2b;
  color: #ffffff;
  text-align: center;
  height: 16px;
  border-radius: 8px;
}
QProgressBar::chunk {
  background-color: #2ecc71;
  border-radius: 8px;
}

/* Scroll area */
QScrollArea, QScrollArea > QWidget > QWidget {
  background: transparent;
}

/* Smooth, minimal scrollbars: transparent track, rounded handle */
QScrollBar:vertical {
  background: transparent;
  width: 10px;
  margin: 8px 4px 8px 0;
  border: none;
}
QScrollBar::handle:vertical {
  min-height: 40px;
  border-radius: 999px;
  background: rgba(255,255,255,0.24);
  margin: 4px;
}
QScrollBar::handle:vertical:hover {
  background: rgba(255,255,255,0.34);
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
  height: 0; background: transparent; border: none;
}
QScrollBar::sub-page:vertical, QScrollBar::add-page:vertical {
  background: transparent;
}

QScrollBar:horizontal {
  background: transparent;
  height: 10px;
  margin: 0 8px 4px 8px;
  border: none;
}
QScrollBar::handle:horizontal {
  min-width: 40px;
  border-radius: 999px;
  background: rgba(255,255,255,0.24);
  margin: 4px;
}
QScrollBar::handle:horizontal:hover { background: rgba(255,255,255,0.34); }
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal { width: 0; background: transparent; border: none; }
QScrollBar::sub-page:horizontal, QScrollBar::add-page:horizontal { background: transparent; }

/* Overrides for last action buttons (ensure precedence over group rule) */
QGroupBox#export_group QPushButton#export_btn {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #49c97a, stop:1 #2f9e57);
  color: #ffffff;
  border: none;
}
QGroupBox#export_group QPushButton#export_btn:hover { background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #5ad58a, stop:1 #38b165); }
QGroupBox#export_group QPushButton#export_btn:pressed { background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #2f9e57, stop:1 #257c45); }

QGroupBox#export_group QPushButton#stop_btn {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #f06258, stop:1 #d7372b);
  color: #ffffff;
